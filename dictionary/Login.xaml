<Window x:Class="dictionary.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dictionary"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800" Background="LightGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>

        <TextBlock Text="Login" Grid.Row="2" HorizontalAlignment="Center" Margin="0,80,0,-104"
           FontSize="40" FontFamily="Segoe UI" Foreground="Blue" FontWeight="Bold"/>

        <TextBox x:Name="textBoxUsername" FontSize="23" Grid.Row="2" Margin="214,162,214,-177" RenderTransformOrigin="0.496,8.843"/>
        <PasswordBox x:Name="passwordBoxPassword" FontSize="17" Grid.Row="2" Margin="214,236,214,-239" RenderTransformOrigin="0.392,12.117"/>

        <Button  Name="enterAdminButton" Content="Enter" HorizontalAlignment="Center" VerticalAlignment="Top" Width="346" Height="40" Background="Blue" Foreground="LightGray" BorderBrush="#2196F3" BorderThickness="1" FontWeight="Bold" FontSize="16" Margin="0,290,0,0" Grid.Row="3" Click="EnterAdmin_Click"/>


    </Grid>
</Window>
